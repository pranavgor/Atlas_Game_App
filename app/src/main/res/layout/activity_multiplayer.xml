<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main_t"
    tools:context="com.example.anonym.atlas.MultiplayerActivity">


    <Button
        android:id="@+id/player2_submit"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="410dp"
        android:background="@color/common_google_signin_btn_text_light_pressed"
        android:fontFamily="monospace"
        android:onClick="submit2"
        android:text="Submit"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/player2_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="475dp"
        android:ems="10"
        android:hint="Ready to play ?"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/player2_place"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="350dp"
        android:background="@color/common_google_signin_btn_text_light_focused"
        android:padding="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="352dp"

        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:text="Player 2"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/map1"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="305dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/trying"
        android:fontFamily="monospace"
        android:onClick="player1map"
        android:padding="2dp"
        android:textAlignment="center"
        android:textColor="?attr/colorAccent"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="127dp"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:text="Player 1"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/player1_place"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="125dp"
        android:background="@color/common_google_signin_btn_text_light_focused"
        android:padding="10dp" />

    <TextView
        android:id="@+id/turnindicator"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:background="@color/black_overlay"
        android:padding="10dp"
        android:text="Turn Indicator"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/player1_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:hint="Ready to play ?"
        android:textAlignment="center" />

    <Button
        android:id="@+id/player1_submit"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="185dp"
        android:background="@color/common_google_signin_btn_text_light_pressed"
        android:fontFamily="monospace"
        android:onClick="submit1"
        android:text="Submit"
        android:textSize="22sp" />

    <Button
        android:id="@+id/map2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="305dp"
        android:layout_marginTop="345dp"
        android:background="@drawable/trying"
        android:onClick="player2map" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="250dp"
        android:layout_marginTop="310dp"
        android:background="@color/colorPrimaryDark" />


</RelativeLayout>
